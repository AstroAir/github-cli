    background: $surface;
    color: $primary;
    border: solid $accent;
    text-align: center;
    text-style: bold;
    padding: 1;
    margin: 0 1;
}

.digits-display {
    background: $background;
    color: $success;
    border: solid $success;
}

.enhanced-digits {
    text-style: bold;
    color: $warning;
}

/* Link Widget Styling */
Link {
    color: $accent;
    text-style: underline;
    background: transparent;
}

Link:hover {
    color: $primary;
    background: $surface;
    text-style: bold underline;
}

.link-widget {
    padding: 0 1;
}

.enhanced-link {
    color: $accent;
    text-style: italic underline;
