}

Collapsible > .collapsible--contents {
    background: $surface;
    padding: 1;
    border-top: solid $accent;
}

.collapsible-section {
    margin: 1 0;
}

.enhanced-collapsible {
    border: solid $success;
    background: $background;
}

.compact-collapsible {
    margin: 0;
    border: none;
}

/* ContentSwitcher Widget Styling */
ContentSwitcher {
    background: $surface;
    border: solid $accent;
}

.content-switcher {
    padding: 1;
}

.enhanced-switcher {
    border: solid $primary;
    background: $background;
}

/* DirectoryTree Widget Styling */
DirectoryTree {
    background: $surface;
    border: solid $accent;
    scrollbar-background: $background;
    scrollbar-color: $primary;
}

.directory-tree {
    padding: 1;
}

.enhanced-tree {
    border: solid $success;
    background: $background;
}

/* Application-Specific Widget Combinations */

/* Repository Statistics Display */
.stats-display {
    background: $surface;
    border: solid $accent;
    padding: 1;
    margin: 1 0;
}

.stats-row {
    align: center middle;
    height: 3;
}

.stat-label {
    color: $text;
    text-style: bold;
    margin: 0 1;
    width: auto;
}

.stat-icon {
    color: $warning;
    text-style: bold;
    margin: 0 1;
    width: 2;
}

/* Modern Filter Panel */
.modern-filter {
    background: $surface;
    border: solid $accent;
    padding: 1;
    margin: 1 0;
}

/* Workflow Analytics Panel */
.workflow-analytics {
    background: $surface;
    border: solid $accent;
    padding: 1;
    margin: 1 0;
}

.analytics-label {
    color: $accent;
    text-style: bold;
    margin: 0 0 1 0;
}

.success-sparkline {
    color: $success;
    background: $background;
    border: solid $success;
    height: 3;
}

.metrics-row {
    align: center middle;
    height: 4;
    margin: 1 0;
}

.metric-label {
    color: $text;
    text-style: bold;
    margin: 0 1;
    width: auto;
}

/* Compact Layout Specific Styles */
.compact-info-panel {
    background: $surface;
    padding: 1;
    margin: 0 1;
}

.compact-stats-panel {
    background: $background;
    border: solid $accent;
    padding: 1;
    margin: 0 1;
}

/* Enhanced Static Text Variations */
.enhanced-static {
    background: transparent;
    color: $text;
    padding: 0 1;
}

.enhanced-static.compact {
    padding: 0;
    margin: 0;
}

.enhanced-static.highlight {
    color: $accent;
    text-style: bold;
}

/* Responsive Adaptations for New Widgets */
/* Note: Textual CSS doesn't support @media queries, use responsive classes instead */

.compact .digits-display {
    padding: 0;
    margin: 0;
    text-style: none;
}

.compact .stats-row {
    height: 2;
}

.compact .metric-label {
    width: 8;
    text-overflow: ellipsis;
}

.ultra-compact .collapsible-section {
    margin: 0;
}

.ultra-compact .workflow-analytics {
    padding: 0;
    margin: 0;
}

.ultra-compact .modern-filter {
    padding: 0;
    margin: 0;
}