/* RadioButton and RadioSet Styling */
RadioButton {
    background: transparent;
    color: $text;
    padding: 0 1;
}

RadioButton:focus {
    background: $surface;
    border: solid $accent;
}

RadioSet {
    background: $surface;
    border: solid $accent;
    padding: 1;
}

.radio-button {
    margin: 0 1;
}

.enhanced-radio {
    color: $accent;
}

.radio-set {
    border: solid $primary;
}

.enhanced-radio-set {
    background: $background;
    border: solid $success;
}

/* TextArea Widget Styling */
TextArea {
    background: $surface;
    border: solid $accent;
    color: $text;
    scrollbar-background: $background;
    scrollbar-color: $primary;
}

TextArea:focus {
    border: solid $primary;
    background: $background;
}

.text-area {
    padding: 1;
}

.enhanced-text-area {
    border: solid $success;
    background: $background;
    color: $text;
